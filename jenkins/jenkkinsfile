// Define variable
def myVariable = "foo"

pipeline {
  agent any
  environment {
        DC_IMAGE_NAME = "node-app"
        ARTVERSION = "${env.BUILD_ID}"
    }
  stages {
    stage('Checkout Code') {
      steps {
        git(url: 'https://github.com/hamidrgholipour/node-project-CICD-k8S', branch: 'master')
        sh 'ls -la && pwd'
      }
    }  
    stage('PreTest'){
        agent { 
        docker { image 'node:20.9.0-alpine3.18' }
      }
      steps {
        sh 'node --version'
      }
    }  
    stage('Test') {
      steps {
        //sh 'echo $DC_IMAGE_NAME' 
        //sh "echo ${myVariable}"
        //sh 'cat docker-compose.yaml'
        //sh 'docker build -t node-app:v1 .'
        sh 'chmod +x prepare-tests.sh'
        sh './prepare-tests.sh'
      }
    }
    stage('Build') {
      steps {
        sh 'echo Bulding'
        script{
          myapp = docker.build( "${DC_IMAGE_NAME}:v${ARTVERSION}")
        }
      }
    }
    stage('deploy') {
      steps {
        sh 'echo Deploying'

      }
    }
  }
}